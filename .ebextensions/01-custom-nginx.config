files:
  "/home/ec2-user/01-custom-nginx.conf" :
    mode: "000755"
    owner: root
    group: root
    content: |
      location / {
          try_files $uri $uri/ /index.php?$query_string;
      }
  "/home/ec2-user/execute_add_conf.sh" :
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      sudo cp /home/ec2-user/01-custom-nginx.conf /etc/nginx/conf.d/elasticbeanstalk/01-custom-nginx.conf
      sudo service nginx reload
container_commands:
#   00_init_env:
#     command: "sudo cp .env.example .env"
  01_init_db:
    command: "php artisan migrate:fresh"
    ignoreErrors: true
  02_add_conf:
    command: /home/ec2-user/execute_add_conf.sh
    ignoreErrors: true
